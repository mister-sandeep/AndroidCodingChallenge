<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <!-- Styles for the Movie Reviews list elements -->
    <style name="ListRowTitle">
        <item name="android:textSize">@dimen/listrow_title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ListRowMetaInfo">
        <item name="android:textSize">@dimen/listrow_meta_text</item>
        <item name="android:textColor">@color/colorMetaGrey</item>
    </style>
    <style name="ListRowHeadline">
        <item name="android:textSize">@dimen/listrow_body_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ListRowBody">
        <item name="android:textSize">@dimen/listrow_body_text</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DetailsTitle">
        <item name="android:textSize">@dimen/details_title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DetailsMetaInfo">
        <item name="android:textSize">@dimen/details_meta_text</item>
        <item name="android:textColor">@color/colorMetaGrey</item>
    </style>
    <style name="DetailsHeadline">
        <item name="android:textSize">@dimen/details_body_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DetailsBody">
        <item name="android:textSize">@dimen/details_body_text</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="DetailsTertiary">
        <item name="android:textSize">@dimen/details_tertiary_text</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
